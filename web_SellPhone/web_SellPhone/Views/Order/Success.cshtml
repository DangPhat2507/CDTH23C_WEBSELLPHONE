@using web_SellPhone.Models
@model Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container mt-5">
    <div class="alert alert-success">
        <h4>🎉 Cảm ơn bạn! Đơn hàng #@Model.OrderID đã được tạo.</h4>
        <p>Trạng thái: <strong>@Model.TrangThai</strong></p>
        <p>Ngày đặt: @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>
        <p>Tổng tiền: <strong class="text-danger">@Model.TongTien đ</strong></p>
    </div>

    <h5>Chi tiết đơn hàng</h5>
    <table class="table table-bordered text-center align-middle">
        <thead class="table-secondary">
            <tr>
                <th>Tên SP</th>
                <th>Đơn giá</th>
                <th>SL</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.OrderDetails)
            {
                <tr>
                    <td>@d.Product?.TenSP</td>
                    <td>@d.DonGiaLucMua.ToString("N0") đ</td>
                    <td>@d.SoLuong</td>
                    <td>@(d.SoLuong* d.DonGiaLucMua).ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="MyOrders" class="btn btn-outline-primary">Xem đơn hàng của tôi</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Về trang chủ</a>
    </div>
</div>
