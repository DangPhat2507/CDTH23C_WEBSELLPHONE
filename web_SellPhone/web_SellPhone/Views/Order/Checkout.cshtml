@using web_SellPhone.Models
@model List<CartItem>
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="container mt-4">
    <h2 class="mb-3">Xác nhận đơn hàng</h2>

    <table class="table table-bordered text-center align-middle">
        <thead class="table-secondary">
            <tr>
                <th>Tên SP</th>
                <th>Đơn giá</th>
                <th>SL</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSP</td>
                    <td>@item.DonGia đ</td>
                    <td>@item.SoLuong</td>
                    <td>@item.ThanhTien đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mb-3">
        <h4 class="text-danger">Tổng cộng: @((decimal)ViewBag.Total).ToString("N0") đ</h4>
    </div>

    <form asp-action="Place" method="post">
        <div class="mb-2">
            <label class="form-label">Địa chỉ giao hàng</label>
            <input type="text" name="diaChiGiaoHang" class="form-control" placeholder="Nhập địa chỉ giao hàng (bỏ trống dùng địa chỉ tài khoản)" />
        </div>
        <div class="mb-3">
            <label class="form-label">Ghi chú</label>
            <textarea name="ghiChu" class="form-control" rows="3" placeholder="Ghi chú cho shop..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Đặt hàng</button>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Quay lại giỏ</a>
    </form>
</div>
