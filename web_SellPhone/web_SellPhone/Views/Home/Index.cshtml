@model IEnumerable<web_SellPhone.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Danh sách điện thoại</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <img src="~/images/@item.HinhAnh" class="card-img-top" alt="@item.TenSP" style="height:200px;object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.TenSP</h5>
                        <p class="text-center text-danger fw-bold">
                            @(item.DonGiaKhuyenMai.HasValue? item.DonGiaKhuyenMai.Value.ToString("N0") + " đ" : item.DonGia.ToString("N0") + " đ")
                        </p>
                        <div class="text-center">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.MaSP" class="btn btn-sm btn-primary">Xem chi tiết</a>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.MaSP" class="btn btn-sm btn-success">Thêm giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
