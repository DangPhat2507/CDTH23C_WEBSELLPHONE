@model web_SellPhone.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/@Model.HinhAnh" alt="@Model.TenSP" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-7">
            <h2>@Model.TenSP</h2>
            <h4 class="text-danger">
                @(Model.DonGiaKhuyenMai.HasValue? Model.DonGiaKhuyenMai.Value.ToString("N0") + " đ" : Model.DonGia.ToString("N0") + " đ")
            </h4>

            <p><strong>Danh mục:</strong> @Model.Category.CategoryName</p>
            <p>@Model.MoTa</p>

            <div class="mt-4">
                <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.MaSP" class="btn btn-success">🛒 Thêm vào giỏ</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
            </div>
        </div>
    </div>
</div>
