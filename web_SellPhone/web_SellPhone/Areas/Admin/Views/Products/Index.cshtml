@using web_SellPhone.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2 class="text-center mb-4">Danh sách sản phẩm</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm</a>

<table class="table table-bordered text-center align-middle">
    <thead class="table-secondary">
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                <td>@sp.MaSP</td>
                <td>@sp.TenSP</td>
                <td>@sp.DonGia.ToString("N0") đ</td>
                <td>@sp.Category?.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sp.MaSP" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@sp.MaSP" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@sp.MaSP" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
